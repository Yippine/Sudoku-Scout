<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 選中/激活狀態 - 使用與數字按鈕相同的高亮效果 -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 陰影層 -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20000000" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- 主背景 - 高亮漸層 -->
            <item android:top="1dp" android:left="1dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_light"
                        android:endColor="@color/white"
                        android:angle="45" />
                    <corners android:radius="16dp" />
                    <stroke 
                        android:width="3dp" 
                        android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- 按壓狀態 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_light"
                        android:endColor="@color/primary_container"
                        android:angle="45" />
                    <corners android:radius="16dp" />
                    <stroke 
                        android:width="3dp" 
                        android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- 禁用狀態 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/text_secondary" />
        </shape>
    </item>
    
    <!-- 正常狀態 - 與數字按鈕一致的樣式 -->
    <item>
        <layer-list>
            <!-- 陰影層 -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20000000" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- 主背景 -->
            <item android:top="1dp" android:left="1dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/white"
                        android:endColor="#FFF8F9FA"
                        android:angle="45" />
                    <corners android:radius="16dp" />
                    <stroke 
                        android:width="2dp" 
                        android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>