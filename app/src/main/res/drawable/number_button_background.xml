<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state with gradient -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_light"
                        android:endColor="@color/primary_container"
                        android:angle="45" />
                    <corners android:radius="18dp" />
                    <stroke 
                        android:width="3dp" 
                        android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5" />
            <corners android:radius="18dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/text_secondary" />
        </shape>
    </item>
    
    <!-- Normal state with subtle gradient -->
    <item>
        <layer-list>
            <item>
                <!-- Shadow layer -->
                <shape android:shape="rectangle">
                    <solid android:color="#20000000" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:right="2dp" android:bottom="2dp">
                <!-- Main button -->
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/white"
                        android:endColor="#FFF8F9FA"
                        android:angle="45" />
                    <corners android:radius="18dp" />
                    <stroke 
                        android:width="2dp" 
                        android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>